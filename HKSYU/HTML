<script>
// 幻燈片控制
let currentSlide = 0;
const totalSlides = 8; // 更新總幻燈片數量，因為新增了一頁
function updateSlide() {
for (let i = 0; i < totalSlides; i++) {
document.getElementById(`slide${i}`).classList.remove('active');
}
document.getElementById(`slide${currentSlide}`).classList.add('active');
document.getElementById('slideCounter').textContent = `${currentSlide + 1}/${totalSlides}`;
}
function goToSlide(slideNum) {
currentSlide = slideNum;
updateSlide();
}
document.getElementById('prevSlide').addEventListener('click', function() {
if (currentSlide > 0) {
currentSlide--;
updateSlide();
}
});
document.getElementById('nextSlide').addEventListener('click', function() {
if (currentSlide < totalSlides - 1) {
currentSlide++;
updateSlide();
}
});
document.addEventListener('keydown', function(event) {
if (event.key === 'ArrowLeft' && currentSlide > 0) {
currentSlide--;
updateSlide();
} else if (event.key === 'ArrowRight' && currentSlide < totalSlides - 1) {
currentSlide++;
updateSlide();
}
});
// 垃圾桶掉落垃圾動畫
function createFallingTrash() {
const trashBinContainer = document.getElementById('trashBinContainer');
if (!trashBinContainer) return;
setInterval(() => {
const trash = document.createElement('div');
trash.className = 'falling-trash';
trash.innerHTML = '🗑️';
const xPos = Math.random() * 100 + 25;
trash.style.left = `${xPos}px`;
trashBinContainer.appendChild(trash);
setTimeout(() => trash.remove(), 2000);
}, 1000);
}
// 巴士堆疊特效 - 改進版
const busImg = document.getElementById('busImg');
const busOverlay = document.getElementById('busOverlay');
const busStackContainer = document.getElementById('busStackContainer');
const busCounter = document.getElementById('busCounter');
const busOverlayClose = document.getElementById('busOverlayClose');
const busImpactSection = document.getElementById('busImpactSection');
const miniBusContainer = document.getElementById('miniBusContainer');
const stadiumContainer = document.getElementById('stadiumContainer');
const continueBtn = document.getElementById('continueBtn');
const busInteraction = document.getElementById('busInteraction');
const interactionFeedback = document.getElementById('interactionFeedback');
const interactionNext = document.getElementById('interactionNext');

const busSvg = `
<svg class="bus-svg" viewBox="0 0 120 50" width="100%" height="100%">
<rect x="5" y="10" width="110" height="35" rx="5" fill="#e74c3c"/>
<rect x="10" y="15" width="100" height="20" fill="#ffffff" opacity="0.3"/>
<rect x="10" y="38" width="20" height="7" rx="3" fill="#333333"/>
<rect x="90" y="38" width="20" height="7" rx="3" fill="#333333"/>
<text x="60" y="30" text-anchor="middle" font-size="14" fill="white" font-weight="bold">🚌</text>
</svg>
`;

let stackedBuses = 0;
let stackInterval;
let stackRow = 0;
const maxBusPerRow = 20;
const totalBuses = 716;
const stadiumCount = 26;

function stackBus() {
if (stackedBuses >= totalBuses) {
clearInterval(stackInterval);
// 動畫完成後顯示提問互動
setTimeout(() => {
busInteraction.style.display = "flex";
}, 1000);
return;
}
const bus = document.createElement('div');
bus.className = 'stacked-bus';
const column = stackedBuses % maxBusPerRow;
if (column === 0 && stackedBuses > 0) stackRow++;
bus.style.left = `${column * 5 + 2}%`;
bus.style.bottom = `${stackRow * 25 + 20}px`;
bus.style.width = `4.5%`;
bus.style.height = `25px`;
bus.style.transform = 'scale(0)';
bus.innerHTML = busSvg;
busStackContainer.appendChild(bus);
setTimeout(() => bus.style.transform = 'scale(1)', 50);
stackedBuses++;
busCounter.textContent = `已堆疊: ${stackedBuses}/${totalBuses}`;
if (stackedBuses % 100 === 0 && stackedBuses > 0) {
const marker = document.createElement('div');
marker.className = 'height-label';
marker.style.bottom = `${stackRow * 25 + 20}px`;
marker.textContent = `${stackedBuses} 輛`;
busStackContainer.appendChild(marker);
}
}

function showImpactVisualization() {
// 顯示震撼效果視窗
busImpactSection.style.display = 'flex';
// 填充微型巴士動畫
miniBusContainer.innerHTML = `
<svg viewBox="0 0 400 400" width="100%" height="100%">
<g transform="translate(200, 200) scale(0.8)">
${Array.from({length: 20}, (_, i) => {
const angle = (i * 18) * Math.PI / 180;
const x = 150 * Math.cos(angle);
const y = 150 * Math.sin(angle);
return `
<g transform="translate(${x}, ${y}) scale(0.3) rotate(${angle * 180 / Math.PI})">
<rect x="-55" y="-17.5" width="110" height="35" rx="5" fill="#e74c3c"/>
<rect x="-50" y="-12.5" width="100" height="20" fill="#ffffff" opacity="0.3"/>
<rect x="-50" y="10.5" width="20" height="7" rx="3" fill="#333333"/>
<rect x="30" y="10.5" width="20" height="7" rx="3" fill="#333333"/>
</g>
`;
}).join('')}
<text x="0" y="10" text-anchor="middle" font-size="30" fill="white">716 輛巴士</text>
</g>
</svg>
`;
// 填充足球場圖示容器
stadiumContainer.innerHTML = '';
for (let i = 0; i < stadiumCount; i++) {
const stadium = document.createElement('div');
stadium.className = 'stadium';
stadium.innerHTML = '⚽';
stadium.style.opacity = '0';
stadiumContainer.appendChild(stadium);
}
// 動畫：先顯示小巴士
setTimeout(() => {
miniBusContainer.classList.add('mini-bus-animation');
miniBusContainer.classList.add('active');
// 然後逐個顯示足球場
setTimeout(() => {
const stadiums = document.querySelectorAll('.stadium');
stadiums.forEach((stadium, index) => {
setTimeout(() => {
stadium.classList.add('active-stadium');
}, index * 100);
});
}, 1000);
}, 500);
}

// 設置巴士互動選項事件
document.querySelectorAll('.interaction-option').forEach(option => {
option.addEventListener('click', function() {
// 顯示所有選項的共同反饋
interactionFeedback.style.display = 'block';
// 標記選擇的選項
document.querySelectorAll('.interaction-option').forEach(opt => {
opt.style.backgroundColor = '';
opt.style.color = '';
});
this.style.backgroundColor = 'var(--blue)';
this.style.color = 'white';
});
});

// 互動下一步按鈕
interactionNext.addEventListener('click', function() {
busInteraction.style.display = 'none';
showImpactVisualization();
});

if (busImg) {
busImg.addEventListener('click', function() {
busOverlay.style.display = 'flex';
stackedBuses = 0;
stackRow = 0;
busStackContainer.innerHTML = '';
busCounter.textContent = `已堆疊: 0/${totalBuses}`;
const heightMarker = document.createElement('div');
heightMarker.className = 'height-marker';
busStackContainer.appendChild(heightMarker);
stackInterval = setInterval(stackBus, 30);
});
}

if (busOverlayClose) {
busOverlayClose.addEventListener('click', function() {
busOverlay.style.display = 'none';
busImpactSection.style.display = 'none';
busInteraction.style.display = 'none';
clearInterval(stackInterval);
});
}

if (continueBtn) {
continueBtn.addEventListener('click', function() {
busImpactSection.style.display = 'none';
busOverlay.style.display = 'none';
});
}

// 垃圾計量器與用途展示
let wasteLevel = 44;
const wasteMeter = document.getElementById('wasteMeter');
const trashCounter = document.getElementById('trashCounter');
const generateWasteBtn = document.getElementById('generateWaste');
const implementFeeBtn = document.getElementById('implementFee');
const showFeeUsageBtn = document.getElementById('showFeeUsage');
const feeUsageContainer = document.getElementById('feeUsageContainer');
let wasteInterval;
let wasteSimulationRunning = false;
function setupWasteSimulation() {
if (!wasteMeter) return;
wasteMeter.style.height = `${wasteLevel}%`;
generateWasteBtn.addEventListener('click', function() {
if (wasteSimulationRunning) {
clearInterval(wasteInterval);
this.textContent = '開始模擬';
wasteSimulationRunning = false;
return;
}
this.textContent = '停止模擬';
wasteSimulationRunning = true;
wasteInterval = setInterval(() => {
if (wasteLevel < 100) {
wasteLevel += 1;
wasteMeter.style.height = `${wasteLevel}%`;
trashCounter.textContent = `垃圾使用率: ${wasteLevel}%`;
if (wasteLevel >= 80) {
trashCounter.style.color = 'var(--red)';
trashCounter.style.fontWeight = 'bold';
wasteMeter.style.backgroundColor = 'var(--red)';
}
if (wasteLevel >= 70) {
implementFeeBtn.disabled = false;
implementFeeBtn.classList.add('pulse');
}
if (wasteLevel >= 100) {
alert('堆填區已飽和！環境危機迫在眉睫！');
clearInterval(wasteInterval);
generateWasteBtn.disabled = true;
wasteSimulationRunning = false;
generateWasteBtn.textContent = '開始模擬';
}
}
}, 200);
});
implementFeeBtn.addEventListener('click', function() {
wasteLevel = Math.floor(wasteLevel * 0.6);
trashCounter.textContent = `垃圾使用率: ${wasteLevel}%`;
wasteMeter.style.height = `${wasteLevel}%`;
trashCounter.style.color = 'inherit';
trashCounter.style.fontWeight = 'normal';
wasteMeter.style.backgroundColor = '';
implementFeeBtn.disabled = true;
implementFeeBtn.classList.remove('pulse');
generateWasteBtn.disabled = false;
clearInterval(wasteInterval);
wasteSimulationRunning = false;
generateWasteBtn.textContent = '開始模擬';
alert('實施垃圾徵費成功！\n垃圾量減少了40%，環境壓力大幅緩解！\n節省下來的費用可以用於社會建設。');
showFeeUsageBtn.style.display = 'block';
});
if (showFeeUsageBtn) {
showFeeUsageBtn.addEventListener('click', function() {
feeUsageContainer.style.display = 'block';
});
}
}

// 改進：地球表情互動與發光效果
function setupEarthInteraction() {
const earthSvg = document.getElementById('earthSvg');
const earthFace = document.getElementById('earthFace');
const tearLeft = document.getElementById('tearLeft');
const tearRight = document.getElementById('tearRight');
const tearDropLeft = document.getElementById('tearDropLeft');
const tearDropRight = document.getElementById('tearDropRight');
const viewEarthBtn = document.getElementById('viewEarthBtn');
if (viewEarthBtn && earthSvg) {
viewEarthBtn.addEventListener('click', function(e) {
e.preventDefault();
// 改變表情從哭臉到笑臉
earthFace.setAttribute('d', 'M70,120 Q100,150 130,120');
// 隱藏眼淚
tearLeft.style.display = 'none';
tearRight.style.display = 'none';
tearDropLeft.style.display = 'none';
tearDropRight.style.display = 'none';
// 添加發光效果
earthSvg.classList.add('glowing-earth');
// 給出視覺反饋
this.textContent = '地球在微笑！';
this.style.backgroundColor = 'var(--green)';
});
}
}

// 初始化
window.onload = function() {
updateSlide();
createFallingTrash();
setupWasteSimulation();
setupEarthInteraction();
// 確保初始垃圾計量器正確顯示
if (wasteMeter) {
wasteMeter.style.height = `${wasteLevel}%`;
}
};

// 處理視窗調整大小時的響應式布局
window.addEventListener('resize', function() {
// 可以在這裡添加任何需要在視窗調整大小時執行的代碼
});
</script>
</body>
</html>
